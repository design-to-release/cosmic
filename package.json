{
  "name": "@cosmic/monorepo",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel --filter !storybook run dev",
    "build": "pnpm -r --parallel --filter !storybook --filter !app run build && npm run electron:build",
    "clean": "pnpm -r --parallel --filter !storybook run clean",
    "story": "npm -C storybook run dev",
    "story:build": "npm -C storybook run build",
    "electron:build": "npm -C src/app run build"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-import": "^14.0.2",
    "postcss-input-range": "^4.0.0",
    "postcss-url": "^10.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "smelte": "^1.1.8",
    "svelte": "~3.38.1",
    "svelte-check": "^2.2.10",
    "svelte-loader": "3.1.1",
    "svelte-preprocess": "^4.9.8",
    "tailwindcss": "^2.2.19",
    "tailwindcss-typography": "^3.1.0",
    "tsup": "^5.7.2",
    "typescript": "^4.5.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck && npm run format:check"
  },
  "lint-staged": {
    "src/app/**/*.{js,ts,svelte}": "eslint -c eslint.app.json",
    "src/{core,app,parts,modules,workbench}/**/*.{js,ts,svelte}": "eslint -c eslint.svelte.json",
    "scripts/**/*.js": "eslint"
  }
}
