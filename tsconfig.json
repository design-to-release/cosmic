{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@cosmic/workbench/services/*": ["workbench/services/*"],
      "@cosmic/workbench/ui/*": ["workbench/ui/*"],
      "@cosmic/core/browser": ["core/browser"],
      "@cosmic/core/common": ["core/common"],
      "@cosmic/core/components": ["core/components"],
      "@cosmic/core/parts": ["core/parts"]
    },
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "types": ["jest"],
    "isolatedModules": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "module": "ESNext"
  },
  "include": ["**/*.ts", "**/*.css"]
}
